<div class="container vw-100">
  <% if user_signed_in? %>
    <h1 class="text-center p-5 ">Registered Users For Westbury Paint Night</h1>
    <br/>
    <hr class="bg-dark" />

  <%= search_form_for @ransack_users, as: :users_search, url: root_path, method: :get do |f| %>
      <div class="input-group">
        <div class="col-md-9 col-xs-6 m-2">
          <%= f.search_field :full_name_cont, :placeholder => 'Search by Name', class: "form-control border rounded-pill" %>
        </div>
        <div class="col-md-1 col-xs-2 d-flex justify-content-center align-items-center">
          <span class="input-group-append ">
            <button class="btn btn-dark btn-md " type="submit">
              <span aria-hidden="true" class="fa fa-search"></span>
            </button>
          </span>
        </div>
        <div class="col-md-1 col-xs-4 m-2">
          <%= link_to 'Refresh', root_path, class:"btn btn-dark text-light" %>
        </div>
      </div>
  <% end %>

  <hr class="bg-dark" />
    <div class="table-responsive py-5"> 
      <table class="table table-bordered table-hover">
        <thead class="thead-dark bg-dark text-light">
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Phone</th>
            <th>City</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
             <tr>
              <td><%= user.first_name.capitalize %></td>
              <td><%= user.last_name.capitalize %></td>
              <td><%= user.primary_phone %></td>
              <td><%= user.primary_city %></td> 
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>
<% else %>
  <div id="background"></div>
  <div class="d-flex justify-content-center align-items-center flex-column vh-100 text-dark main-cover ">
    <h1 class="text-center"><strong>Westbury Paint Night Event</strong></h1>
      <div class="border shadow-lg p-3 mb-2 rounded border-dark transparent">
        <p class="text-center mt-3"><strong>835 Brush Hollow Rd. Westbury,NY</strong></p>
        <p class="text-center"><strong>9th August, 2021 | 8 PM EST</strong>
      </div>
       <h5 class="text-center"> Winner will be awarded with <strong class="text-light bg-dark">$1000 </strong>  USD prize</h5>
      <p class="lead">
        <%= link_to "Register", new_user_registration_path, class:"btn btn-lg btn-dark text-white" %> |
        <%= link_to "Sign In", new_user_session_path,class:"btn btn-lg btn-dark text-white"%>
      </p>
  </div>
<% end %>

