<div class="form-group nested-fields">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :phone_type, class:"required-field" %>
        <%= f.select :phone_type, ["Home", "Work", "Cell"], {:prompt => 'Select Phone Type'}, {class: "form-select"} %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :phone_number, class:"required-field" %>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "XXX-XXX-XXXX" %>
      </div>
    </div>
  </div>
      <%= link_to_remove_association 'Remove Phone', f, class: "text-danger" %> 
</div>
  